{
  "name": "@maksimr/karma-test-utils",
  "version": "0.0.2",
  "files": [
    "lib"
  ],
  "scripts": {
    "release:major": "changelog -M && npm run release -- major",
    "release:minor": "changelog -m && npm run release -- minor",
    "release:patch": "changelog -p && npm run release -- patch",
    "prerelease": "git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md'",
    "release": "npm version -m 'bump: version to %s'",
    "postrelease": "git push origin && git push origin --tags",
    "test": "karma start ./test/karma.config.js",
    "test:type": "tsc",
    "lint": "eslint lib/ test/"
  },
  "devDependencies": {
    "eslint": "9.33.0",
    "typescript": "5.9.2",
    "@types/jasmine": "5.1.9",
    "@types/webpack-env": "1.18.8",
    "@types/webpack-sources": "3.2.3",
    "karma": "6.4.4",
    "karma-webpack": "5.0.1",
    "karma-jasmine": "5.1.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-spec-reporter": "0.0.36",
    "playwright": "1.54.2",
    "generate-changelog": "1.8.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "globals": {
      "describe": true,
      "it": true,
      "beforeEach": true,
      "beforeAll": true,
      "afterAll": true,
      "afterEach": true,
      "expect": true,
      "expectAsync": true
    },
    "rules": {
      "no-console": "error",
      "quotes": [
        "error",
        "single"
      ],
      "no-undef": "error",
      "semi": "error",
      "no-unused-vars": "error"
    }
  },
  "author": "Maksim Ryzhikov <rv.maksim@gmail.com> (https://github.com/maksimr)",
  "license": "ISC"
}
